<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="LMS.Views.Calculator">

    <StackLayout Padding="20">
        <Label Text="CGPA Calculator" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,0" />

        <Entry x:Name="CreditsEntry" Placeholder="Enter Credits" Margin="0,20,0,0" />
        <Entry x:Name="GradeEntry" Placeholder="Enter Grade" Margin="0,10,0,0" />

        <Button Text="Add Course" CornerRadius="7" BackgroundColor="#9300ff" TextColor="White" FontSize="Subtitle" FontAttributes="Bold" FontFamily="poppins" Clicked="AddCourse_Clicked" Margin="0,20,0,0" />

        <BoxView HeightRequest="1" Color="Black" Margin="0,20,0,20" />

        <Button Text="Calculate CGPA" CornerRadius="7" BackgroundColor="#9300ff" TextColor="White" FontSize="Subtitle" FontAttributes="Bold" FontFamily="poppins" Clicked="CalculateCGPA_Clicked"  />

        <Button Text="Reset" Clicked="Reset_Clicked" CornerRadius="7" BackgroundColor="#ed2939" TextColor="White" FontSize="Subtitle" FontAttributes="Bold" FontFamily="poppins"  />

    </StackLayout>

</ContentPage>
